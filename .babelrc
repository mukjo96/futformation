{
    "presets": [
        [
            "@babel/env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "extensions": [".ts"],
                "root": ["."],
                "alias": {
                    "@features": "./features",
                    "@styles": "./styles"
                }
            }
        ],
        [
            "styled-components",
            {
                "ssr": true,
                "displayName": true,
                "preprocess": false
            }
        ],
        ["@babel/plugin-proposal-optional-chaining"],
        ["@emotion"]
    ],

    "comments": false,
    "ignore": ["./src/__tests__"]
}
